{
  "openapi": "3.0.0",
  "info": {
    "title": "Documentação",
    "description": "Essa API tem como objetivo a manipulação dos clientes, seus contatos e autenticação",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000/",
      "description": "API local"
    }
  ],
  "securitySchemes": {
    "bearerAuth": {
      "type": "http",
      "scheme": "bearer",
      "bearerFormat": "JWT"
    }
  },

  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/clients": {
      "post": {
        "summary": "Cadastro de clientes",
        "description": "Essa rota será responsável por cadastrar um novo cliente",
        "tags": ["clients"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ClientInput"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Cliente cadastrado com sucesso"
          },
          "400": {
            "description": "Requisição inválida"
          },
          "500": {
            "description": "Erro interno do servidor"
          }
        }
      },
      "get": {
        "summary": "Listagem de clientes",
        "description": "Essa rota será responsável por listar todos os clientes",
        "tags": ["clients"],
        "responses": {
          "200": {
            "description": "Clientes encontrados",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Client"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro interno do servidor"
          }
        }
      }
    },
    "/clients/{clientId}": {
      "get": {
        "summary": "Consulta de cliente",
        "description": "Essa rota será responsável por consultar um cliente pelo ID",
        "tags": ["clients"],
        "parameters": [
          {
            "name": "clientId",
            "in": "path",
            "description": "ID do cliente",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Cliente encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Client"
                }
              }
            }
          },
          "404": {
            "description": "Cliente não encontrado"
          },
          "500": {
            "description": "Erro interno do servidor"
          }
        }
      },
      "patch": {
        "summary": "Atualização de cliente",
        "description": "Essa rota será responsável por atualizar os dados de um cliente existente",
        "tags": ["clients"],
        "parameters": [
          {
            "name": "clientId",
            "in": "path",
            "description": "ID do cliente",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ClientInput"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Cliente atualizado com sucesso"
          },
          "400": {
            "description": "Requisição inválida"
          },
          "404": {
            "description": "Cliente não encontrado"
          },
          "500": {
            "description": "Erro interno do servidor"
          }
        }
      },
      "delete": {
        "summary": "Exclusão de cliente",
        "description": "Essa rota será responsável por excluir um cliente existente",
        "tags": ["clients"],
        "parameters": [
          {
            "name": "clientId",
            "in": "path",
            "description": "ID do cliente",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Cliente excluído com sucesso"
          },
          "404": {
            "description": "Cliente não encontrado"
          },
          "500": {
            "description": "Erro interno do servidor"
          }
        }
      }
    },
    "/contacts": {
      "post": {
        "summary": "Cadastro de contatos",
        "description": "Essa rota será responsável por cadastrar um novo contato para um cliente",
        "tags": ["contacts"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ContactInput"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Contato cadastrado com sucesso"
          },
          "400": {
            "description": "Requisição inválida"
          },
          "500": {
            "description": "Erro interno do servidor"
          }
        }
      },
      "get": {
        "summary": "Listagem de contatos",
        "description": "Essa rota será responsável por listar todos os contatos",
        "tags": ["contacts"],
        "responses": {
          "200": {
            "description": "Contatos encontrados",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Contact"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro interno do servidor"
          }
        }
      }
    },
    "/contacts/{contactId}": {
      "get": {
        "summary": "Consulta de contato",
        "description": "Essa rota será responsável por consultar um contato pelo ID",
        "tags": ["contacts"],
        "parameters": [
          {
            "name": "contactId",
            "in": "path",
            "description": "ID do contato",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Contato encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Contact"
                }
              }
            }
          },
          "404": {
            "description": "Contato não encontrado"
          },
          "500": {
            "description": "Erro interno do servidor"
          }
        }
      },
      "patch": {
        "summary": "Atualização de contato",
        "description": "Essa rota será responsável por atualizar os dados de um contato existente",
        "tags": ["contacts"],
        "parameters": [
          {
            "name": "contactId",
            "in": "path",
            "description": "ID do contato",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ContactInput"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Contato atualizado com sucesso"
          },
          "400": {
            "description": "Requisição inválida"
          },
          "404": {
            "description": "Contato não encontrado"
          },
          "500": {
            "description": "Erro interno do servidor"
          }
        }
      },
      "delete": {
        "summary": "Exclusão de contato",
        "description": "Essa rota será responsável por excluir um contato existente",
        "tags": ["contacts"],
        "parameters": [
          {
            "name": "contactId",
            "in": "path",
            "description": "ID do contato",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Contato excluído com sucesso"
          },
          "404": {
            "description": "Contato não encontrado"
          },
          "500": {
            "description": "Erro interno do servidor"
          }
        }
      }
    },
    "/login": {
      "post": {
        "summary": "Autenticação de usuário",
        "description": "Essa rota será responsável por autenticar um usuário com base em suas credenciais",
        "tags": ["auth"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginInput"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Autenticação realizada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthResponse"
                }
              }
            }
          },
          "400": {
            "description": "Requisição inválida"
          },
          "401": {
            "description": "Credenciais inválidas"
          },
          "500": {
            "description": "Erro interno do servidor"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ClientInput": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "password": {
            "type": "string"
          },
          "tel": {
            "type": "string"
          }
        },
        "required": ["name", "email", "password", "tel"]
      },
      "Client": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "tel": {
            "type": "string"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "contacts": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Contact"
            }
          }
        }
      },
      "ContactInput": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "tel": {
            "type": "string"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "client_id": {
            "type": "integer",
            "format": "int64"
          }
        },
        "required": ["name", "email", "tel", "client_id"]
      },
      "Contact": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "tel": {
            "type": "string"
          },
          "client_id": {
            "type": "integer",
            "format": "int64"
          }
        }
      },
      "LoginInput": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email"
          },
          "password": {
            "type": "string"
          }
        },
        "required": ["email", "password"]
      },
      "AuthResponse": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string"
          }
        }
      }
    }
  }
}
